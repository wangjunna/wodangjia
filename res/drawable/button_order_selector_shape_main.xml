<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="false"><shape android:shape="rectangle">

			<!-- 边框的颜色 -->
			<stroke android:width="0.5dip" android:color="#00cccc" />

			<corners android:radius="4dip" />

			<padding android:bottom="2dp" android:left="3dp" android:right="3dp" android:top="2dp" />
		</shape></item>
	<item android:state_pressed="true"><shape android:shape="rectangle">

			<!-- 填充的颜色 -->
			<solid android:color="#6600cccc"></solid>
			<!-- 设置按钮的四个角为弧形 -->
			<corners android:radius="4dip" />
			<!-- android:radius 弧形的半径 -->
			<padding android:bottom="2dp" android:left="3dp" android:right="3dp" android:top="2dp" />
		</shape></item>

</selector>