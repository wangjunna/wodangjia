<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mw" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp"
             >

            <TextView
                android:id="@+id/tv_label_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="订单编号："
                android:textColor="#666666" />

            <TextView
                android:id="@+id/order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_label_no"
                android:text="14464350365528784753"
                android:textColor="#888888" />
        </RelativeLayout>

        <com.wodangjia.view.NoScrollListView
            android:id="@+id/order_goods_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.wodangjia.view.NoScrollListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bbbbbb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/tv_label_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="时间："
                android:layout_marginLeft="10dp"
                android:textColor="#888888"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_label_time"
                android:text="2015-11-2 11:30:36"
                android:textColor="#888888"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="18 元"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/label_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/all_price"
                android:text="合计："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/label_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/label_sum"
                android:text="共  3 件"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bbbbbb" />

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/login_button_dbg"
                android:text="功能1"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:textSize="12dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/button1"
                android:layout_alignBottom="@+id/button1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/button1"
                android:background="@drawable/login_button_dbg"
                android:text="功能2"
                android:textColor="#ffffff"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btn_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignParentLeft="true"
                android:background="@drawable/login_button_dbg"
                android:text="订单详情"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:textSize="12dp" />
            <TextView 
                android:id="@+id/tv_status"
                android:text="已完成"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_order_detail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />
    </LinearLayout>

</RelativeLayout>