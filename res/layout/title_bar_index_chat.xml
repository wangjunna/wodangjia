<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.wodangjialayout"
    style="@style/action_bar_whb" >

    <com.wodangjia.view.CircleImageView
        android:id="@+id/chat_title_photo"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/store1"
        app:border_color="#88ffffff"
        android:clickable="true"
        app:border_width="0dp" />

    <RadioGroup
        android:id="@+id/chat_title_radiogroup"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:background="@drawable/chat_title_rg_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/chat_title_message"
            style="@style/index_chat_title_rb"
            android:background="@drawable/chat_title_rb_bg_left"
            android:checked="true"
            android:text="@string/message" />

        <RadioButton
            android:id="@+id/chat_title_contacts"
            style="@style/index_chat_title_rb"
            android:background="@drawable/chat_title_rb_bg_right"
            android:text="@string/contacts" />
    </RadioGroup>

    <ImageView
        android:id="@+id/chat_title_plus"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:src="@drawable/chat_title_iv_plus" />

</RelativeLayout>