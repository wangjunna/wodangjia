<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="50dp" >
    <TextView
        android:id="@+id/label_stock"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:text="库存" />

    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_toRightOf="@id/label_stock"
        android:text="999" />

    <ImageButton
        android:id="@+id/iv_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_product_num_add_normal" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_add"
        android:background="@drawable/edit_text"
        android:clickable="true"
        android:gravity="center"
        android:text="2" />

    <ImageButton
        android:id="@+id/iv_des"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_count"
        android:background="@drawable/edit_product_num_des_normal" />

</RelativeLayout>